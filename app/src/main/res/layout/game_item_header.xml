<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/game_item_image"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:background="@color/colorPrimary"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:paddingTop="4dp"
	    android:paddingBottom="4dp"
	    android:alpha="0.95"
	    android:id="@+id/game_item_layout_title"
	    android:gravity="center"
	    >
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        >
	        <TextView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:lines="1"
			    android:id="@+id/game_item_title"
			    android:textSize="@dimen/text_size_small"
			    android:gravity="center_vertical"
			    android:textAllCaps="true"
			    android:textColor="@color/sdk_font_color_light"
			    />
			<TextView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:lines="1"
			    android:id="@+id/game_item_desc"
			    android:textSize="@dimen/text_size_micro"
			    android:visibility="gone"
			    />
			<TextView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:lines="1"
			    android:id="@+id/game_item_download_text"
			    android:textSize="@dimen/text_size_micro"
			    android:textColor="@color/sdk_font_color_light"
			    />
	    </LinearLayout>
	    <RelativeLayout 
	        android:layout_width="112dp"
	        android:layout_height="34dp"
	        android:background="@color/colorPrimaryLight"
	        >
	    	<Button 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:id="@+id/game_item_action"
			    android:background="@null"
			    android:textColor="@color/sdk_font_color_light"
			    android:textSize="@dimen/text_size_normal"
			    android:paddingLeft="30dp"
			    />
	    	<ImageView 
	    	    android:layout_width="34dp"
	    	    android:layout_height="34dp"
	    	    android:layout_margin="8dp"
	    	    android:src="@mipmap/taixuong"
	    	    />    
	    	<TextView 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent"
	    	    android:gravity="center"
	    	    android:textColor="@color/sdk_font_color_light"
			    android:textSize="@dimen/text_size_normal"
			    />
	    </RelativeLayout>
	    
	</LinearLayout>
	
</RelativeLayout>
